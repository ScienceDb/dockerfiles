version: "3.2"

services:
  science_db_backend:
    image: 'science_db_backend:latest'
    links:
      - postgres
    environment:
      PORT: 3000
    ports:
      - "3000:3000"
    volumes:
      - /home/hallab/projects/ReconstructDb/ScienceDbBackend:/usr/src/app
    command: 'npm start'

  science_db_gui:
    image: 'science_db_gui:latest'
    links:
      - science_db_backend
    environment:
      PORT: 3333
    ports:
      - "3333:3333"
    volumes:
      - /home/hallab/projects/ReconstructDb/ScienceDbGui:/usr/src/app
    command: "npm run dev"

  postgraphql:
    image: postgraphql/postgraphql:latest
    ports:
      - "5000"
    environment:
      PGUSER: kodiaq
      PGPASSWORD: kodiaq
      PGHOST: postgres
      PGDATABASE: kodiaq_development
      PGPORT: 5432
    links:
      - postgres

  postgres:
    image: 'science_db_postgres:latest'
    volumes:
      - data:/var/lib/postgresql/data

volumes:
  data: 
